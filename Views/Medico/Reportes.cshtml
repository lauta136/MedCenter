@{
    ViewData["Title"] = "Reportes";
    Layout = "~/Views/Shared/_MedicoLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <!-- Estadísticas -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">
                    <i class="fas fa-chart-line me-2 text-primary"></i>
                    Mis Estadísticas
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-primary">
                                <i class="fas fa-calendar-check"></i>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-number">@ViewBag.TurnosMes</h3>
                                <p class="stat-label">Consultas este Mes</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-success">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-number">@ViewBag.PacientesAtendidos</h3>
                                <p class="stat-label">Pacientes Atendidos</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Opciones de reportes -->
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-file-alt me-2 text-primary"></i>
                            Reporte de Consultas
                        </h5>
                        <p class="text-muted">Genera un reporte de tus consultas por período</p>
                        <form id="formConsultas" class="mt-3">
                            <div class="mb-3">
                                <label class="form-label">Fecha Desde</label>
                                <input type="date" id="fechaDesdeMedico" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Fecha Hasta</label>
                                <input type="date" id="fechaHastaMedico" class="form-control" required />
                            </div>
                            <button type="button" onclick="descargarConsultasPDF()" class="btn btn-danger w-100 mb-2">
                                <i class="fas fa-file-pdf me-2"></i>
                                Descargar PDF
                            </button>
                            <button type="button" onclick="descargarConsultasExcel()" class="btn btn-success w-100">
                                <i class="fas fa-file-excel me-2"></i>
                                Descargar Excel
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-notes-medical me-2 text-success"></i>
                            Historias Clínicas Creadas
                        </h5>
                        <p class="text-muted">Resumen de entradas médicas registradas</p>
                        <form id="formHistorias" class="mt-3">
                            <div class="mb-3">
                                <label class="form-label">Fecha Desde</label>
                                <input type="date" id="fechaDesdeHistorias" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Fecha Hasta</label>
                                <input type="date" id="fechaHastaHistorias" class="form-control" required />
                            </div>
                            <button type="button" onclick="descargarHistoriasPDF()" class="btn btn-success w-100 mb-2">
                                <i class="fas fa-file-pdf me-2"></i>
                                Descargar PDF
                            </button>
                            <button type="button" onclick="descargarHistoriasExcel()" class="btn btn-outline-success w-100">
                                <i class="fas fa-file-excel me-2"></i>
                                Descargar Excel
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-card {
        display: flex;
        align-items: center;
        padding: 1.5rem;
        background-color: #f8f9fa;
        border-radius: 12px;
        transition: all 0.3s;
    }
    
    .stat-card:hover {
        background-color: #e9ecef;
        transform: translateY(-2px);
    }
    
    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
        margin-right: 1rem;
    }
    
    .stat-content {
        flex: 1;
    }
    
    .stat-number {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 0.25rem;
        color: #2d3748;
    }
    
    .stat-label {
        color: #6c757d;
        margin-bottom: 0;
        font-size: 0.9rem;
    }
    
    .form-control {
        background-color: #ffffff !important;
        color: #000000 !important;
    }
    
    .form-control:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.25);
    }
</style>

<script>
    function descargarConsultasPDF() {
        const fechaDesde = document.getElementById('fechaDesdeMedico').value;
        const fechaHasta = document.getElementById('fechaHastaMedico').value;
        
        if (!fechaDesde || !fechaHasta) {
            alert('Por favor seleccione ambas fechas');
            return;
        }
        
        window.location.href = `/Reportes/DescargarReporteMedicoPDF?fechaDesde=${fechaDesde}&fechaHasta=${fechaHasta}`;
    }
    
    function descargarConsultasExcel() {
        const fechaDesde = document.getElementById('fechaDesdeMedico').value;
        const fechaHasta = document.getElementById('fechaHastaMedico').value;
        
        if (!fechaDesde || !fechaHasta) {
            alert('Por favor seleccione ambas fechas');
            return;
        }
        
        window.location.href = `/Reportes/DescargarReporteMedicoExcel?fechaDesde=${fechaDesde}&fechaHasta=${fechaHasta}`;
    }
    
    function descargarHistoriasPDF() {
        const fechaDesde = document.getElementById('fechaDesdeHistorias').value;
        const fechaHasta = document.getElementById('fechaHastaHistorias').value;
        
        if (!fechaDesde || !fechaHasta) {
            alert('Por favor seleccione ambas fechas');
            return;
        }
        
        window.location.href = `/Reportes/DescargarHistoriasClinicasPDF?fechaDesde=${fechaDesde}&fechaHasta=${fechaHasta}`;
    }
    
    function descargarHistoriasExcel() {
        const fechaDesde = document.getElementById('fechaDesdeHistorias').value;
        const fechaHasta = document.getElementById('fechaHastaHistorias').value;
        
        if (!fechaDesde || !fechaHasta) {
            alert('Por favor seleccione ambas fechas');
            return;
        }
        
        window.location.href = `/Reportes/DescargarHistoriasClinicasExcel?fechaDesde=${fechaDesde}&fechaHasta=${fechaHasta}`;
    }
</script>