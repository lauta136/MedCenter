@model MedCenter.DTOs.EntradaClinicaRegisterDTO
@{
    ViewData["Title"] = "Nueva Entrada Clínica";
    Layout = "~/Views/Shared/_MedicoLayout.cshtml";
    var pacienteNombre = ViewBag.PacienteNombre as string;
    var turnoId = ViewBag.TurnoId as int?;
    var fechaTurno = ViewBag.FechaTurno as string;
    var horaTurno = ViewBag.HoraTurno as string;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-notes-medical me-2 text-primary"></i>
                    Nueva Entrada Clínica
                </h2>
                <a asp-action="Index" asp-controller="Medico" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver
                </a>
            </div>

            <!-- Patient Info Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user me-2"></i>
                        Información del Paciente
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-1 text-muted small">Paciente</p>
                            <p class="mb-3 fw-semibold">@pacienteNombre</p>
                        </div>
                        @if (!string.IsNullOrEmpty(fechaTurno) && !string.IsNullOrEmpty(horaTurno))
                        {
                            <div class="col-md-3">
                                <p class="mb-1 text-muted small">Fecha</p>
                                <p class="mb-3">@fechaTurno</p>
                            </div>
                            <div class="col-md-3">
                                <p class="mb-1 text-muted small">Hora</p>
                                <p class="mb-3">@horaTurno</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Entry Form -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-semibold">
                        <i class="fas fa-file-medical me-2 text-success"></i>
                        Registro de Consulta
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="GuardarEntrada" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="turnoId" value="@turnoId" />

                        <!-- Diagnóstico -->
                        <div class="mb-4">
                            <label asp-for="diagnostico" class="form-label fw-semibold">
                                <i class="fas fa-stethoscope me-1 text-primary"></i>
                                Diagnóstico <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="diagnostico" 
                                      class="form-control" 
                                      rows="4" 
                                      placeholder="Ingrese el diagnóstico del paciente..."
                                      style="background-color: white !important; color: black !important;"
                                      required></textarea>
                            <span asp-validation-for="diagnostico" class="text-danger small"></span>
                        </div>

                        <!-- Tratamiento -->
                        <div class="mb-4">
                            <label asp-for="tratamiento" class="form-label fw-semibold">
                                <i class="fas fa-pills me-1 text-success"></i>
                                Tratamiento <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="tratamiento" 
                                      class="form-control" 
                                      rows="4" 
                                      placeholder="Ingrese el tratamiento prescrito..."
                                      style="background-color: white !important; color: black !important;"
                                      required></textarea>
                            <span asp-validation-for="tratamiento" class="text-danger small"></span>
                        </div>

                        <!-- Observaciones -->
                        <div class="mb-4">
                            <label asp-for="observaciones" class="form-label fw-semibold">
                                <i class="fas fa-clipboard me-1 text-info"></i>
                                Observaciones
                            </label>
                            <textarea asp-for="observaciones" 
                                      class="form-control" 
                                      rows="3" 
                                      placeholder="Observaciones adicionales (opcional)..."
                                      style="background-color: white !important; color: black !important;"></textarea>
                            <span asp-validation-for="observaciones" class="text-danger small"></span>
                        </div>

                        <!-- Validation Summary -->
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Por favor corrija los errores antes de continuar.
                            </div>
                        }

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" asp-controller="Medico" class="btn btn-secondary">
                                <i class="fas fa-times me-2"></i>
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>
                                Guardar Entrada
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Alert -->
            <div class="alert alert-info mt-3">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Nota:</strong> Solo puede registrar entradas durante la cita o hasta 30 minutos después de finalizada.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    .btn-primary {
        background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
        border: none;
        transition: transform 0.2s;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.4);
    }

    textarea.form-control {
        resize: vertical;
        min-height: 80px;
    }

    .card {
        border-radius: 0.5rem;
    }

    .card-header {
        border-radius: 0.5rem 0.5rem 0 0 !important;
    }
</style>