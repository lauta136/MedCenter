@model IEnumerable<MedCenter.Models.Paciente>
@{
    ViewData["Title"] = "Historias Clínicas";
    Layout = "~/Views/Shared/_MedicoLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0 fw-semibold">
                    <i class="fas fa-file-medical me-2 text-primary"></i>
                    Historias Clínicas de Mis Pacientes
                </h5>
            </div>
            <div class="card-body p-0">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Paciente</th>
                                    <th>DNI</th>
                                    <th>Teléfono</th>
                                    <th>Entradas</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var paciente in Model)
                                {
                                    <tr>
                                        <td>
                                            <i class="fas fa-user text-primary me-2"></i>
                                            <strong>@paciente.idNavigation.nombre</strong>
                                        </td>
                                        <td>
                                            <i class="fas fa-id-card text-muted me-2"></i>
                                            @paciente.dni
                                        </td>
                                        <td>
                                            <i class="fas fa-phone text-success me-2"></i>
                                            @paciente.telefono
                                        </td>
                                        <td>
                                            <span class="badge bg-info">
                                                @(paciente.historiasclinicas?.EntradasClinicas.Count ?? 0) entradas
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="VerHistoria" asp-route-id="@paciente.id" 
                                                   class="btn btn-outline-primary" title="Ver historia">
                                                    <i class="fas fa-eye"></i>
                                                    Ver Historia
                                                </a>
                                                <a asp-action="NuevaEntrada" asp-route-pacienteId="@paciente.id" 
                                                   class="btn btn-outline-success" title="Nueva entrada">
                                                    <i class="fas fa-plus"></i>
                                                    Nueva Entrada
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="mb-3">
                            <i class="fas fa-file-medical fa-4x text-muted opacity-50"></i>
                        </div>
                        <h5 class="text-muted">No has atendido pacientes aún</h5>
                        <p class="text-muted">Las historias clínicas aparecerán cuando atiendas tus primeras consultas</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        color: #6c757d;
    }
    
    .table tbody tr {
        transition: background-color 0.2s;
    }
    
    .table tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>