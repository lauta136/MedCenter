@model IEnumerable<MedCenter.DTOs.TurnoViewDTO>
@{
    ViewData["Title"] = "Mis Turnos";
    Layout = "~/Views/Shared/_PacienteLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <!-- Stats Cards -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="icon-box bg-primary">
                                    <i class="fas fa-calendar-check text-white"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Próximos Turnos</h6>
                                <h3 class="mb-0">@Model.Count()</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="icon-box bg-success">
                                    <i class="fas fa-user-md text-white"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Próximo Turno</h6>
                                <h5 class="mb-0">@(Model.Any() ? Model.First().Fecha : "Sin turnos")</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="icon-box bg-info">
                                    <i class="fas fa-stethoscope text-white"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Estado</h6>
                                <h5 class="mb-0">Activo</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Appointments List -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-semibold">
                        <i class="fas fa-calendar-alt me-2 text-primary"></i>
                        Mis Próximos Turnos
                    </h5>
                    <a asp-action="SolicitarTurno" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus me-2"></i>
                        Nuevo Turno
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Fecha</th>
                                    <th>Hora</th>
                                    <th>Médico</th>
                                    <th>Especialidad</th>
                                    <th>Estado</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var turno in Model)
                                {
                                    <tr>
                                        <td>
                                            <i class="fas fa-calendar text-primary me-2"></i>
                                            <strong>@turno.Fecha</strong>
                                        </td>
                                        <td>
                                            <i class="fas fa-clock text-muted me-2"></i>
                                            @turno.Hora
                                        </td>
                                        <td>
                                            <i class="fas fa-user-md text-success me-2"></i>
                                            @turno.MedicoNombre
                                        </td>
                                        <td>
                                            <span class="badge bg-info bg-opacity-10 text-info">
                                                @turno.Especialidad
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>
                                                @turno.Estado
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group btn-group-sm">
                                                <a asp-controller="Turno" asp-action="Details" asp-route-id="@turno.Id" 
                                                   class="btn btn-outline-primary" title="Ver detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="ReprogramarTurno" asp-route-id="@turno.Id" 
                                                   class="btn btn-outline-warning" title="Reprogramar">
                                                    <i class="fas fa-calendar-alt"></i>
                                                </a>
                                                <a asp-controller = "Turno" asp-action="Cancelar" asp-route-id="@turno.Id" 
                                                   class="btn btn-outline-danger" title="Cancelar">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="mb-3">
                            <i class="fas fa-calendar-times fa-4x text-muted opacity-50"></i>
                        </div>
                        <h5 class="text-muted">No tienes turnos próximos</h5>
                        <p class="text-muted mb-4">Solicita un nuevo turno para agendar tu próxima consulta</p>
                        <a asp-action="SolicitarTurno" class="btn btn-primary">
                            <i class="fas fa-calendar-plus me-2"></i>
                            Solicitar Turno
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .icon-box {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }
    
    .card {
        border-radius: 12px;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        color: #6c757d;
    }
    
    .table tbody tr {
        transition: background-color 0.2s;
    }
    
    .table tbody tr:hover {
        background-color: #f8f9fa;
    }
    
    .btn-group-sm > .btn {
        padding: 0.375rem 0.5rem;
    }
</style>