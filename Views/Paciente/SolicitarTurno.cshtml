@{
    ViewData["Title"] = "Solicitar Turno";
    Layout = "~/Views/Shared/_PacienteLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-calendar-plus me-2"></i>
                    Solicitar Nuevo Turno
                </h5>
            </div>
            <div class="card-body p-4">
                <p class="text-muted mb-4">Completa los datos para solicitar tu turno médico</p>
                
                <form method="post" asp-controller="Turno" asp-action="Create">
                    <!-- Aquí irá el formulario de solicitud de turno -->
                    <!-- Por ahora placeholder -->
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Esta funcionalidad se integrará con tu sistema existente de crear turnos
                    </div>
                    
                    <div class="text-center mt-4">
                        <a asp-action="Dashboard" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Volver
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>