@model IEnumerable<MedCenter.DTOs.TurnoViewDTO>
@using MedCenter.Services.TurnoSv
@{
    ViewData["Title"] = "Gestión de Turnos";
    Layout = "~/Views/Shared/_SecretariaLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                <strong>Error:</strong> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <!-- Stats Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="icon-box bg-success">
                                    <i class="fas fa-calendar-check text-white"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Turnos Hoy</h6>
                                <h3 class="mb-0">@ViewBag.TotalTurnosHoy</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="icon-box bg-primary">
                                    <i class="fas fa-check text-white"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Confirmados</h6>
                                <h3 class="mb-0">@ViewBag.TurnosConfirmados</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="icon-box bg-danger">
                                    <i class="fas fa-times text-white"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Cancelados</h6>
                                <h3 class="mb-0">@ViewBag.TurnosCancelados</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="icon-box bg-info">
                                    <i class="fas fa-users text-white"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Total Pacientes</h6>
                                <h3 class="mb-0">@ViewBag.TotalPacientes</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="card border-0 shadow-sm mb-4 bg-gradient-to-r from-green-50 to-blue-50">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">Acciones Rápidas</h5>
                        <p class="text-muted mb-0">Gestiona turnos y pacientes rápidamente</p>
                    </div>
                    <div class="d-flex gap-2">
                        <a asp-controller="Turno" asp-action="Reservar" class="btn btn-outline-success">
                            <i class="fas fa-calendar-plus me-2"></i>
                            Asignar Turno
                        </a>
                        <a asp-controller="Turno" asp-action="GestionarTurnos" class="btn btn-outline-warning">
                            <i class="fas fa-calendar-plus me-2"></i>
                            Reprogramar/Cancelar Turno
                        </a>
                        <!--<a asp-controller="Turno" asp-action="Cancelar" class="btn btn-outline-danger">
                            <i class="fas fa-calendar-plus me-2"></i>
                            Cancelar Turno
                        </a>
                        -->
                        <a asp-action="NuevoPaciente" class="btn btn-outline-primary">
                            <i class="fas fa-user-plus me-2"></i>
                            Nuevo Paciente
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Today's Appointments -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0 fw-semibold">
                    <i class="fas fa-calendar-day me-2 text-success"></i>
                    Turnos de Hoy - @DateTime.Now.ToString("dd/MM/yyyy")
                </h5>
            </div>
            <div class="card-body p-0">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Hora</th>
                                    <th>Paciente</th>
                                    <th>Médico</th>
                                    <th>Especialidad</th>
                                    <th>Estado</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var turno in Model)
                                {
                                    <tr>
                                        <td>
                                            <i class="fas fa-clock text-muted me-2"></i>
                                            <strong>@turno.Hora</strong>
                                        </td>
                                        <td>
                                            <i class="fas fa-user text-primary me-2"></i>
                                            @turno.PacienteNombre
                                        </td>
                                        <td>
                                            <i class="fas fa-user-md text-success me-2"></i>
                                            @turno.MedicoNombre
                                        </td>
                                        <td>
                                            <span class="badge bg-info bg-opacity-10 text-info">
                                                @turno.Especialidad
                                            </span>
                                        </td>
                                            <td>
                                            @if (turno.Estado == EstadosTurno.Reservado.ToString())
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>
                                                    @turno.Estado
                                                </span>
                                            }
                                            else if (turno.Estado == EstadosTurno.Cancelado.ToString())
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-times me-1"></i>
                                                    @turno.Estado
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">
                                                    @turno.Estado
                                                </span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group btn-group-sm">
                                                <a asp-controller="Turno" asp-action="Details" asp-route-id="@turno.Id" 
                                                   class="btn btn-outline-primary" title="Ver detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if(turno.PuedeReprogramar)
                                                {
                                                    <a asp-controller="Turno" asp-action="Reprogramar" asp-route-id="@turno.Id" 
                                                        class="btn btn-outline-warning" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                }
                                                @if(turno.PuedeCancelar)
                                                {
                                                    <a asp-controller="Turno" asp-action="Cancelar" asp-route-id="@turno.Id" 
                                                    class="btn btn-outline-danger" title="Cancelar">
                                                        <i class="fas fa-times"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="mb-3">
                            <i class="fas fa-calendar-times fa-4x text-muted opacity-50"></i>
                        </div>
                        <h5 class="text-muted">No hay turnos programados para hoy</h5>
                        <p class="text-muted mb-4">Comienza asignando un nuevo turno</p>
                        <a asp-controller="Turno" asp-action="Reservar" class="btn btn-success">
                            <i class="fas fa-calendar-plus me-2"></i>
                            Asignar Turno
                        </a>
                    </div>
                }
            </div>
        </div>

        

<style>
    .icon-box {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }
    
    .card {
        border-radius: 12px;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        color: #6c757d;
    }
    
    .table tbody tr {
        transition: background-color 0.2s;
    }
    
    .table tbody tr:hover {
        background-color: #f8f9fa;
    }
    
    .btn-group-sm > .btn {
        padding: