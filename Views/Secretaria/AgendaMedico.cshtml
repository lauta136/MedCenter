@* Views/Agenda/Index.cshtml *@
@model List<MedCenter.DTOs.MedicoAgendaDTO>
@{
    ViewData["Title"] = "Gestión de Agendas";
    Layout = "~/Views/Shared/_SecretariaLayout.cshtml";
}

<link rel="stylesheet" href="~/css/titles.css" />


<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
         <h2 class="mb-0 text-white">  <!-- ✅ Agregar text-white -->
                <i class="fas fa-calendar-alt me-2"></i>
                Gestión de Agendas Médicas
            </h2>
            <small class="text-white">Configura los horarios de atención de cada médico</small>  <!-- ✅ text-white -->
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Médico</th>
                        <th>Matrícula</th>
                        <th>Días que atiende</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (MedicoAgendaDTO medico in Model)
                    {
                        <tr>
                            <td>@medico.Nombre</td>
                            <td>@medico.Matricula</td>
                            <td>
                                @if (medico.DiasDisponibles.Any(dd => dd.activa == true))
                                {
                                    var dias = medico.DiasDisponibles
                                        .Where(dd => dd.activa == true)
                                        .Select(d => ObtenerNombreDia(d.dia_semana))
                                        .Distinct()
                                        .OrderBy(d => d);
                                    <span class="badge bg-success">@string.Join(", ", dias)</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Sin agenda</span>
                                }
                            </td>
                            <td> <!-- Tenes que poner el nombre especifico de lo que recibe el metodo: asp route medico_id porque el metodo recibe medico_id -->
                                <a asp-action="GestionarDisponibilidad" asp-route-medico_id="@medico.Id" 
                                   class="btn btn-primary btn-sm">
                                    <i class="fas fa-calendar-alt"></i> Gestionar Agenda
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    string ObtenerNombreDia(DayOfWeek dia)
    {
        return dia switch
        {
            DayOfWeek.Monday => "Lun",
            DayOfWeek.Tuesday => "Mar",
            DayOfWeek.Wednesday => "Mié",
            DayOfWeek.Thursday => "Jue",
            DayOfWeek.Friday => "Vie",
            DayOfWeek.Saturday => "Sáb",
            DayOfWeek.Sunday => "Dom",
            _ => ""
        };
    }
}