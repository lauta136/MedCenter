<script>
    function showClientError(message){

        const errorDiv = document.getElementById('clientErrorMessage');
        const errorText = document.getElementById('clientErrorText');
        errorText.textContent = message;
        errorDiv.style.display = 'block';
        
        // Scroll to top to show error
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }
    function clearClientError() {
        document.getElementById('clientErrorMessage').style.display = 'none';
    }
    function validarFechas(fechaDesde, fechaHasta){
        clearClientError();
        if (!fechaDesde || !fechaHasta) {
            showClientError('Por favor seleccione ambas fechas');
            return false;
        }
        if (fechaDesde > fechaHasta) {
            showClientError('La fecha de inicio no puede ser despu√©s de la fecha de fin');
            return false;
        }
        
        const hoy = new Date().toISOString().split('T')[0];
        if (fechaDesde > hoy || fechaHasta > hoy) {
            showClientError('No se pueden seleccionar fechas futuras');
            return false;
        }
        
        return true;
    }
    function filtrarAccionPorUsuario(){
        const usuarioSelect = document.getElementById('usuarioAcciones');
        const accionSelect = document.getElementById('accionAudit');
        const selectedOption = usuarioSelect.options[usuarioSelect.selectedIndex];
        
        // Get actions for selected user from data attribute
        const accionesPermitidas = selectedOption.getAttribute('data-acciones');
        
        // Clear current options
        accionSelect.innerHTML = '<option value="">Todas las acciones</option>';
        
        if (!accionesPermitidas || accionesPermitidas === "") {
            // If "Todos los Usuarios" selected, show all actions
            accionSelect.innerHTML += '<option value="INSERT">INSERT</option>';
            accionSelect.innerHTML += '<option value="UPDATE">UPDATE</option>';
            accionSelect.innerHTML += '<option value="CANCEL">CANCEL</option>';
            accionSelect.innerHTML += '<option value="FINALIZE">FINALIZE</option>';
            accionSelect.innerHTML += '<option value="NOSHOW">NOSHOW</option>';
        } else {
            // Show only actions this user can perform
            const acciones = accionesPermitidas.split(',');
            acciones.forEach(accion => {
                if (accion) {  // Skip empty strings
                    const option = document.createElement('option');
                    option.value = accion;
                    option.textContent = accion;
                    accionSelect.appendChild(option);
                }
            });
        }
    }
    function descargarTurnosPDF() {
        const fechaDesde = document.getElementById('fechaDesde').value;
        const fechaHasta = document.getElementById('fechaHasta').value;
        
        if (!validarFechas(fechaDesde,fechaHasta)) return;
         
        window.location.href = `/Reportes/DescargarReporteTurnosPDF?fechaDesde=${fechaDesde}&fechaHasta=${fechaHasta}`;
    }
    
    function descargarTurnosExcel() {
        const fechaDesde = document.getElementById('fechaDesde').value;
        const fechaHasta = document.getElementById('fechaHasta').value;
        
        if (!validarFechas(fechaDesde,fechaHasta)) return;
        
        window.location.href = `/Reportes/DescargarReporteTurnosExcel?fechaDesde=${fechaDesde}&fechaHasta=${fechaHasta}`;
    }

    // NEW: Summary Report (only statistics)
    function descargarResumenPDF() {
        const fechaDesde = document.getElementById('fechaDesdeResumen').value;
        const fechaHasta = document.getElementById('fechaHastaResumen').value;
        
        if (!validarFechas(fechaDesde, fechaHasta)) return;
        
        window.location.href = `/Reportes/DescargarResumenTurnosPDF?fechaDesde=${fechaDesde}&fechaHasta=${fechaHasta}`;
    }

    // NEW: Executive Report (metrics first)
    function descargarEjecutivoPDF() {
        const fechaDesde = document.getElementById('fechaDesdeEjecutivo').value;
        const fechaHasta = document.getElementById('fechaHastaEjecutivo').value;
        
        if (!validarFechas(fechaDesde, fechaHasta)) return;
        
        window.location.href = `/Reportes/DescargarReporteEjecutivoPDF?fechaDesde=${fechaDesde}&fechaHasta=${fechaHasta}`;
    }

    function descargarAuditoriaTurnosPDF() {
        const fechaDesde = document.getElementById('fechaDesdeAuditTurno').value;
        const fechaHasta = document.getElementById('fechaHastaAuditTurno').value;
        const usuarioSelect = document.getElementById('usuarioAcciones');
        const usuarioNombre = usuarioSelect.options[usuarioSelect.selectedIndex].text;
        const accion = document.getElementById('accionAudit').value;
        const medicoId = document.getElementById('medicoIdAudit').value;

        if (!validarFechas(fechaDesde, fechaHasta)) {
            return;
        }
         
        let url = `/Reportes/DescargarAuditoriaTurnosPDF?fechaDesde=${fechaDesde}&fechaHasta=${fechaHasta}`;
        if (usuarioNombre && usuarioNombre !== "" && usuarioNombre !== "Todos los Usuarios") {
            url += `&usuarioNombre=${encodeURIComponent(usuarioNombre)}`;
        }
        if (accion && accion !== "") {
            url += `&accion=${accion}`;
        }
        if (medicoId && medicoId !== "" && medicoId !== "0") {
            url += `&medicoId=${medicoId}`;
        }
        
        window.location.href = url;
    }
    
    function descargarAuditoriaTurnosExcel() {
        const fechaDesde = document.getElementById('fechaDesdeAuditTurno').value;
        const fechaHasta = document.getElementById('fechaHastaAuditTurno').value;
        const usuarioSelect = document.getElementById('usuarioAcciones');
        const usuarioNombre = usuarioSelect.options[usuarioSelect.selectedIndex].text;
        const accion = document.getElementById('accionAudit').value;
        const medicoId = document.getElementById('medicoIdAudit').value;
        
        if (!validarFechas(fechaDesde, fechaHasta)) {
            return;
        }
        
        let url = `/Reportes/DescargarAuditoriaTurnosExcel?fechaDesde=${fechaDesde}&fechaHasta=${fechaHasta}`;
        if (usuarioNombre && usuarioNombre !== "" && usuarioNombre !== "Todos los Usuarios") {
            url += `&usuarioNombre=${encodeURIComponent(usuarioNombre)}`;
        }
        if (accion && accion !== "") {
            url += `&accion=${accion}`;
        }
        if (medicoId && medicoId !== "" && medicoId !== "0") {
            url += `&medicoId=${medicoId}`;
        }
        
        window.location.href = url;
    }

    function descargarTurnosPDFPorMedico() {
        const medicoSelect = document.getElementById('medicoId');
        const medicoId = medicoSelect.value;
        const especialidadSelect = document.getElementById('especialidadId');
        const especialidadId = especialidadSelect.value;
        const mesesAtras = parseInt(document.getElementById('periodo').value);
        
        console.log('MedicoId value:', medicoId, 'Type:', typeof medicoId);
        console.log('EspecialidadId value:', especialidadId, 'Type:', typeof especialidadId);
        console.log('Selected option:', medicoSelect.options[medicoSelect.selectedIndex].text);
        
        if (!mesesAtras) {
            showClientError('Por favor seleccione un periodo');
            return;
        }
        
        // Calculate dates
        const fechaHasta = new Date();
        const fechaDesde = new Date();
        fechaDesde.setMonth(fechaDesde.getMonth() - mesesAtras);
        
        const desde = fechaDesde.toISOString().split('T')[0];
        const hasta = fechaHasta.toISOString().split('T')[0];
        
        let url = `/Reportes/DescargarReporteMedicoPDF?fechaDesde=${desde}&fechaHasta=${hasta}`;
        if (medicoId && medicoId !== "" && medicoId !== "0") {
            url += `&medicoId=${medicoId}`;
        }
        if (especialidadId && especialidadId !== "" && especialidadId !== "0") {
            url += `&especialidadId=${especialidadId}`;
