@{
    ViewData["Title"] = "Reportes";
    Layout = "~/Views/Shared/_SecretariaLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <!-- Estadísticas del mes -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">
                    <i class="fas fa-chart-line me-2 text-success"></i>
                    Estadísticas del Mes
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-primary">
                                <i class="fas fa-calendar-check"></i>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-number">@ViewBag.TurnosMes</h3>
                                <p class="stat-label">Turnos del Mes</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-success">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-number">@ViewBag.PacientesNuevosMes</h3>
                                <p class="stat-label">Pacientes Totales</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-danger">
                                <i class="fas fa-times-circle"></i>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-number">@ViewBag.TurnosCancelados</h3>
                                <p class="stat-label">Turnos Cancelados</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Opciones de reportes -->
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-file-alt me-2 text-primary"></i>
                            Reporte de Turnos
                        </h5>
                        <p class="text-muted">Genera un reporte detallado de turnos por fecha</p>
                        <form method="get" asp-action="ReporteTurnos" class="mt-3">
                            <div class="mb-3">
                                <label class="form-label">Fecha Desde</label>
                                <input type="date" name="fechaDesde" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Fecha Hasta</label>
                                <input type="date" name="fechaHasta" class="form-control" required />
                            </div>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-download me-2"></i>
                                Generar Reporte
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-users me-2 text-success"></i>
                            Reporte de Pacientes
                        </h5>
                        <p class="text-muted">Listado completo de pacientes registrados</p>
                        <div class="mt-3">
                            <button class="btn btn-success w-100 mb-2">
                                <i class="fas fa-download me-2"></i>
                                Descargar Listado PDF
                            </button>
                            <button class="btn btn-outline-success w-100">
                                <i class="fas fa-file-excel me-2"></i>
                                Exportar a Excel
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-user-md me-2 text-info"></i>
                            Reporte por Médico
                        </h5>
                        <p class="text-muted">Turnos atendidos por cada médico</p>
                        <form class="mt-3">
                            <div class="mb-3">
                                <label class="form-label">Seleccionar Médico</label>
                                <select class="form-select" required>
                                    <option value="">Todos los médicos</option>
                                    <!-- Aquí cargarías los médicos dinámicamente -->
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Período</label>
                                <select class="form-select">
                                    <option>Último mes</option>
                                    <option>Últimos 3 meses</option>
                                    <option>Último año</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-info w-100">
                                <i class="fas fa-download me-2"></i>
                                Generar Reporte
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-chart-bar me-2 text-warning"></i>
                            Estadísticas Generales
                        </h5>
                        <p class="text-muted">Resumen completo de actividad del centro</p>
                        <div class="mt-3">
                            <button class="btn btn-warning w-100 mb-2">
                                <i class="fas fa-chart-pie me-2"></i>
                                Ver Dashboard Completo
                            </button>
                            <button class="btn btn-outline-warning w-100">
                                <i class="fas fa-print me-2"></i>
                                Imprimir Resumen
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-card {
        display: flex;
        align-items: center;
        padding: 1.5rem;
        background-color: #f8f9fa;
        border-radius: 12px;
        transition: all 0.3s;
    }
    
    .stat-card:hover {
        background-color: #e9ecef;
        transform: translateY(-2px);
    }
    
    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
        margin-right: 1rem;
    }
    
    .stat-content {
        flex: 1;
    }
    
    .stat-number {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 0.25rem;
        color: #2d3748;
    }
    
    .stat-label {
        color: #6c757d;
        margin-bottom: 0;
        font-size: 0.9rem;
    }
    
    .form-control, .form-select {
        background-color: #ffffff !important;
        color: #000000 !important;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #10b981;
        box-shadow: 0 0 0 0.2rem rgba(16, 185, 129, 0.25);
    }
</style>