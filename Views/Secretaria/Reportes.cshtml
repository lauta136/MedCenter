@model IEnumerable<MedCenter.DTOs.MedicoViewDTO>
@{
    ViewData["Title"] = "Reportes";
    Layout = "~/Views/Shared/_SecretariaLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <!-- Estadísticas del mes -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0">
                    <i class="fas fa-chart-line me-2 text-success"></i>
                    Estadísticas del Mes
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-primary">
                                <i class="fas fa-calendar-check"></i>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-number">@ViewBag.TurnosMes</h3>
                                <p class="stat-label">Turnos del Mes</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-success">
                                <i class="fas fa-user-plus"></i>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-number">@ViewBag.PacientesNuevosMes</h3>
                                <p class="stat-label">Pacientes Totales</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="stat-card">
                            <div class="stat-icon bg-danger">
                                <i class="fas fa-times-circle"></i>
                            </div>
                            <div class="stat-content">
                                <h3 class="stat-number">@ViewBag.TurnosCancelados</h3>
                                <p class="stat-label">Turnos Cancelados</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Opciones de reportes -->
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-file-alt me-2 text-primary"></i>
                            Reporte de Turnos
                        </h5>
                        <p class="text-muted">Genera un reporte detallado de turnos por fecha</p>
                        <form id="formTurnos" class="mt-3">
                            <div class="mb-3">
                                <label class="form-label">Fecha Desde</label>
                                <input type="date" id="fechaDesde" name="fechaDesde" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Fecha Hasta</label>
                                <input type="date" id="fechaHasta" name="fechaHasta" class="form-control" required />
                            </div>
                            <button type="button" onclick="descargarTurnosPDF()" class="btn btn-danger w-100 mb-2">
                                <i class="fas fa-file-pdf me-2"></i>
                                Descargar PDF
                            </button>
                            <button type="button" onclick="descargarTurnosExcel()" class="btn btn-success w-100">
                                <i class="fas fa-file-excel me-2"></i>
                                Descargar Excel
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-users me-2 text-success"></i>
                            Reporte de Pacientes
                        </h5>
                        <p class="text-muted">Listado completo de pacientes registrados</p>
                        <div class="mt-3">
                            <button onclick="descargarPacientesPDF()" class="btn btn-danger w-100 mb-2">
                                <i class="fas fa-file-pdf me-2"></i>
                                Descargar Listado PDF
                            </button>
                            <button onclick="descargarPacientesExcel()" class="btn btn-success w-100">
                                <i class="fas fa-file-excel me-2"></i>
                                Exportar a Excel
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-filter me-2 text-info"></i>
                            Reporte Filtrado
                        </h5>
                        <p class="text-muted">Filtra turnos por médico y/o especialidad</p>
                        <form class="mt-3">
                            <div class="mb-3">
                                <label class="form-label">Especialidad</label>
                                <select class="form-select" id="especialidadId" onchange="filtrarMedicosPorEspecialidad()">
                                    <option value="">Todas las especialidades</option>
                                    @foreach (var especialidad in ViewBag.Especialidades)
                                    {
                                        <option value="@especialidad.id">@especialidad.nombre</option>
                                    }
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Médico (opcional)</label>
                                <select class="form-select" id="medicoId">
                                    <option value="">Todos los médicos</option>
                                    @foreach (var medico in Model)
                                    {
                                        <option value="@medico.Id">@medico.Nombre</option>
                                    }
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Período</label>
                                <select class="form-select" id="periodo"> 
                                    <option value="1">Último mes</option>
                                    <option value="3">Últimos 3 meses</option>
                                    <option value="12">Último año</option>
                                </select>
                            </div>
                            <button type="button" onclick="descargarTurnosPDFPorMedico()" class="btn btn-danger w-100 mb-2">
                                <i class="fas fa-file-pdf me-2"></i>
                                Descargar PDF
                            </button>
                            <button type="button" onclick="descargarTurnosExcelPorMedico()" class="btn btn-success w-100">
                                <i class="fas fa-file-excel me-2"></i>
                                Descargar Excel
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            
        </div>
    </div>
</div>

<style>
    .stat-card {
        display: flex;
        align-items: center;
        padding: 1.5rem;
        background-color: #f8f9fa;
        border-radius: 12px;
        transition: all 0.3s;
    }
    
    .stat-card:hover {
        background-color: #e9ecef;
        transform: translateY(-2px);
    }
    
    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
        margin-right: 1rem;
    }
    
    .stat-content {
        flex: 1;
    }
    
    .stat-number {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 0.25rem;
        color: #2d3748;
    }
    
    .stat-label {
        color: #6c757d;
        margin-bottom: 0;
        font-size: 0.9rem;
    }
    
    .form-control, .form-select {
        background-color: #ffffff !important;
        color: #000000 !important;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #10b981;
        box-shadow: 0 0 0 0.2rem rgba(16, 185, 129, 0.25);
    }
</style>

<script>
    function descargarTurnosPDF() {
        const fechaDesde = document.getElementById('fechaDesde').value;
        const fechaHasta = document.getElementById('fechaHasta').value;
        
        if (!fechaDesde || !fechaHasta) {
            alert('Por favor seleccione ambas fechas');
            return;
        }
        
        window.location.href = `/Reportes/DescargarReporteTurnosPDF?fechaDesde=${fechaDesde}&fechaHasta=${fechaHasta}`;
    }
    
    function descargarTurnosExcel() {
        const fechaDesde = document.getElementById('fechaDesde').value;
        const fechaHasta = document.getElementById('fechaHasta').value;
        
        if (!fechaDesde || !fechaHasta) {
            alert('Por favor seleccione ambas fechas');
            return;
        }
        
        window.location.href = `/Reportes/DescargarReporteTurnosExcel?fechaDesde=${fechaDesde}&fechaHasta=${fechaHasta}`;
    }

    function descargarTurnosPDFPorMedico() {
        const medicoSelect = document.getElementById('medicoId');
        const medicoId = medicoSelect.value;
        const especialidadSelect = document.getElementById('especialidadId');
        const especialidadId = especialidadSelect.value;
        const mesesAtras = parseInt(document.getElementById('periodo').value);
        
        console.log('MedicoId value:', medicoId, 'Type:', typeof medicoId);
        console.log('EspecialidadId value:', especialidadId, 'Type:', typeof especialidadId);
        console.log('Selected option:', medicoSelect.options[medicoSelect.selectedIndex].text);
        
        if (!mesesAtras) {
            alert('Por favor seleccione un periodo');
            return;
        }
        
        // Calculate dates
        const fechaHasta = new Date();
        const fechaDesde = new Date();
        fechaDesde.setMonth(fechaDesde.getMonth() - mesesAtras);
        
        const desde = fechaDesde.toISOString().split('T')[0];
        const hasta = fechaHasta.toISOString().split('T')[0];
        
        let url = `/Reportes/DescargarReporteMedicoPDF?fechaDesde=${desde}&fechaHasta=${hasta}`;
        if (medicoId && medicoId !== "" && medicoId !== "0") {
            url += `&medicoId=${medicoId}`;
        }
        if (especialidadId && especialidadId !== "" && especialidadId !== "0") {
            url += `&especialidadId=${especialidadId}`;
        }
        
        console.log('Final URL:', url);
        window.location.href = url;
    }
    
    function descargarTurnosExcelPorMedico() {
        const medicoSelect = document.getElementById('medicoId');
        const medicoId = medicoSelect.value;
        const especialidadSelect = document.getElementById('especialidadId');
        const especialidadId = especialidadSelect.value;
        const mesesAtras = parseInt(document.getElementById('periodo').value);
        
        console.log('MedicoId value:', medicoId, 'Type:', typeof medicoId);
        console.log('EspecialidadId value:', especialidadId, 'Type:', typeof especialidadId);
        console.log('Selected option:', medicoSelect.options[medicoSelect.selectedIndex].text);
        
        if (!mesesAtras) {
            alert('Por favor seleccione un periodo');
            return;
        }
        
        // Calculate dates
        const fechaHasta = new Date();
        const fechaDesde = new Date();
        fechaDesde.setMonth(fechaDesde.getMonth() - mesesAtras);
        
        const desde = fechaDesde.toISOString().split('T')[0];
        const hasta = fechaHasta.toISOString().split('T')[0];
        
        let url = `/Reportes/DescargarReporteMedicoExcel?fechaDesde=${desde}&fechaHasta=${hasta}`;
        if (medicoId && medicoId !== "" && medicoId !== "0") {
            url += `&medicoId=${medicoId}`;
        }
        if (especialidadId && especialidadId !== "" && especialidadId !== "0") {
            url += `&especialidadId=${especialidadId}`;
        }
        
        console.log('Final URL:', url);
        window.location.href = url;
    }
    
    function descargarPacientesPDF() {
        window.location.href = '/Reportes/DescargarPacientesPDF';
    }
    
    function descargarPacientesExcel() {
        window.location.href = '/Reportes/DescargarPacientesExcel';
    }

    // Filter doctors by specialty
    async function filtrarMedicosPorEspecialidad() {
        const especialidadId = document.getElementById('especialidadId').value;
        const medicoSelect = document.getElementById('medicoId');
        
        // Clear current options except "Todos los médicos"
        medicoSelect.innerHTML = '<option value="">Todos los médicos</option>';
        
        if (!especialidadId || especialidadId === "") {
            // If no specialty selected, load all doctors
            const allMedicos = @Html.Raw(Json.Serialize(Model));
            allMedicos.forEach(medico => {
                const option = document.createElement('option');
                option.value = medico.id;
                option.textContent = medico.nombre;
                medicoSelect.appendChild(option);
            });
        } else {
            // Fetch doctors for selected specialty
            try {
                const response = await fetch(`/Reportes/GetMedicosPorEspecialidad?especialidadId=${especialidadId}`);
                const medicos = await response.json();
                
                medicos.forEach(medico => {
                    const option = document.createElement('option');
                    option.value = medico.id;
                    option.textContent = medico.nombre;
                    medicoSelect.appendChild(option);
                });
            } catch (error) {
                console.error('Error al cargar médicos:', error);
            }
        }
    }
</script>