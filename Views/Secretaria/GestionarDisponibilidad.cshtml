@model List<MedCenter.Models.DisponibilidadMedico>
@{
    ViewData["Title"] = "Gestionar Disponibilidad";
    Layout = "~/Views/Shared/_SecretariaLayout.cshtml";
    
    var medicoId = ViewBag.MedicoId;
    var medicoNombre = ViewBag.MedicoNombre;
}
<link rel="stylesheet" href="~/css/titles.css" />

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Gestionar Disponibilidad</h2>
            <p class="text-muted mb-0">
                <strong>@medicoNombre</strong>
            </p>
        </div>
        <a asp-action="AgendaMedico" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Volver
        </a>
    </div>

    <!-- Mensaje de éxito -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Mensaje de error -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Mensaje de error -->
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @ViewBag.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Agenda Actual -->
    @if (Model.Any())
    {
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="fas fa-calendar-check me-2"></i>
                    Bloques de Disponibilidad Activos
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Día</th>
                                <th>Horario</th>
                                <th>Duración turno</th>
                                <th>Vigencia desde</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dispo in Model.OrderBy(d => d.dia_semana))
                            {
                                <tr>
                                    <td>
                                        <strong>@ObtenerNombreDia(dispo.dia_semana)</strong>
                                    </td>
                                    <td>
                                        <i class="fas fa-clock text-muted me-1"></i>
                                        @dispo.hora_inicio.ToString(@"HH\:mm") - @dispo.hora_fin.ToString(@"HH\:mm")
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@dispo.duracion_turno_minutos min</span>
                                    </td>
                                    <td>@dispo.vigencia_desde.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <button class="btn btn-sm btn-warning me-1" 
                                                onclick="editarBloque(@dispo.id, '@dispo.dia_semana', '@dispo.hora_inicio.ToString(@"HH\:mm")', '@dispo.hora_fin.ToString(@"HH\:mm")', @dispo.duracion_turno_minutos)">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger" 
                                                onclick="confirmarEliminar(@dispo.id)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- Formulario Nueva Disponibilidad -->
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-plus-circle me-2"></i>
                Agregar Bloque de Disponibilidad
            </h5>
            <button type="button" class="btn btn-light btn-sm" onclick="mostrarFormulario()">
                <i class="fas fa-plus me-1"></i> Nuevo Bloque
            </button>
        </div>
        <div class="card-body" id="formularioBloque" style="display: none;">
            <form id="formDisponibilidad" asp-action="AgregarBloqueDisponibilidad" method="post">
                <input type="hidden" name="medico_id" value="@medicoId" />
                
                <div class="row g-3">
                    <!-- Día de la semana -->
                    <div class="col-md-3">
                        <label class="form-label">Día de la semana</label>
                        <select name="Dia_semana" class="form-select" required>
                            <option value="">Seleccionar...</option>
                            <option value="1">Lunes</option>
                            <option value="2">Martes</option>
                            <option value="3">Miércoles</option>
                            <option value="4">Jueves</option>
                            <option value="5">Viernes</option>
                            <option value="6">Sábado</option>
                            <option value="0">Domingo</option>
                        </select>
                    </div>

                    <!-- Hora inicio -->
                    <div class="col-md-2">
                        <label class="form-label">Hora inicio</label>
                        <input type="time" name="Hora_inicio" class="form-control" 
                               value="08:00" required />
                    </div>

                    <!-- Hora fin -->
                    <div class="col-md-2">
                        <label class="form-label">Hora fin</label>
                        <input type="time" name="Hora_fin" class="form-control" 
                               value="12:00" required />
                    </div>

                    <!-- Duración turno -->
                    <div class="col-md-3">
                        <label class="form-label">Duración de cada turno</label>
                        <select name="Duracion_turno_minutos" class="form-select">
                            <option value="15">15 minutos</option>
                            <option value="20">20 minutos</option>
                            <option value="30" selected>30 minutos</option>
                            <option value="45">45 minutos</option>
                            <option value="60">60 minutos</option>
                        </select>
                    </div>

                    <!-- Botones -->
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Guardar
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Preview del bloque -->
                <div class="mt-3 p-3 bg-light rounded" id="preview" style="display: none;">
                    <p class="mb-1"><strong>Vista previa:</strong></p>
                    <p class="mb-0" id="previewText"></p>
                </div>
            </form>
        </div>
    </div>

    <!-- Botón para generar slots -->
    @if (Model.Any())
    {
        <div class="mt-4">
            <button type="button" class="btn btn-primary" onclick="generarSlots()">
                <i class="fas fa-sync-alt me-2"></i>
                Generar Slots (próximos 60 días)
            </button>
            <small class="text-muted ms-2">
                Esto creará automáticamente los horarios disponibles según los bloques configurados
            </small>
        </div>
    }
</div>

<!-- Modal para editar -->
<div class="modal fade" id="modalEditar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title">
                    <i class="fas fa-edit me-2"></i>
                    Editar Bloque de Disponibilidad
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="EditarBloqueDisponibilidad" method="post">
                <input type="hidden" name="medico_id" value="@medicoId" />
                <input type="hidden" name="dispo_id" id="editDispoId" />
                
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Día de la semana</label>
                        <select name="Dia_semana" id="editDia" class="form-select" required>
                            <option value="1">Lunes</option>
                            <option value="2">Martes</option>
                            <option value="3">Miércoles</option>
                            <option value="4">Jueves</option>
                            <option value="5">Viernes</option>
                            <option value="6">Sábado</option>
                            <option value="0">Domingo</option>
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Hora inicio</label>
                            <input type="time" name="Hora_inicio" id="editHoraInicio" 
                                   class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Hora fin</label>
                            <input type="time" name="Hora_fin" id="editHoraFin" 
                                   class="form-control" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Duración de cada turno</label>
                        <select name="Duracion_turno_minutos" id="editDuracion" class="form-select">
                            <option value="15">15 minutos</option>
                            <option value="20">20 minutos</option>
                            <option value="30">30 minutos</option>
                            <option value="45">45 minutos</option>
                            <option value="60">60 minutos</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save me-1"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal para confirmar eliminación -->
<div class="modal fade" id="modalEliminar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CancelarBloqueDisponibilidad" method="post">
                <input type="hidden" name="medico_id" value="@medicoId" />
                <input type="hidden" name="dispo_id" id="deleteDispoId" />
                
                <div class="modal-body">
                    <p>¿Está seguro que desea eliminar este bloque de disponibilidad?</p>
                    <p class="text-danger">
                        <strong>Advertencia:</strong> Los slots ya generados no se eliminarán automáticamente.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Mostrar/ocultar formulario
    function mostrarFormulario() {
        const form = document.getElementById('formularioBloque');
        form.style.display = form.style.display === 'none' ? 'block' : 'none';
    }

    // Preview en tiempo real
    const formInputs = document.querySelectorAll('#formDisponibilidad select, #formDisponibilidad input');
    formInputs.forEach(input => {
        input.addEventListener('change', actualizarPreview);
    });

    function actualizarPreview() {
        const dia = document.querySelector('[name="Dia_semana"]').selectedOptions[0]?.text;
        const horaInicio = document.querySelector('[name="Hora_inicio"]').value;
        const horaFin = document.querySelector('[name="Hora_fin"]').value;
        const duracion = document.querySelector('[name="Duracion_turno_minutos"]').value;

        if (dia && horaInicio && horaFin) { //si tienen algun elemento seleccionado
            const preview = document.getElementById('preview');
            const previewText = document.getElementById('previewText');
            
            previewText.innerHTML = `
                <span class="text-primary">${dia}</span> de 
                <span class="text-success">${horaInicio}</span> a 
                <span class="text-success">${horaFin}</span> - 
                Turnos cada <span class="text-info">${duracion} minutos</span>
            `; //Texto que se va a cargar en previewText 
            preview.style.display = 'block'; 
        }
    }

    // Editar bloque
    function editarBloque(id, dia, horaInicio, horaFin, duracion) {
        document.getElementById('editDispoId').value = id;
        document.getElementById('editDia').value = dia;
        document.getElementById('editHoraInicio').value = horaInicio;
        document.getElementById('editHoraFin').value = horaFin;
        document.getElementById('editDuracion').value = duracion;
        
        const modal = new bootstrap.Modal(document.getElementById('modalEditar'));
        modal.show();
    }

    // Confirmar eliminar
    function confirmarEliminar(id) {
        document.getElementById('deleteDispoId').value = id;
        const modal = new bootstrap.Modal(document.getElementById('modalEliminar'));
        modal.show();
    }

    // Generar slots
    async function generarSlots() {
        if (!confirm('¿Generar slots para los próximos 60 días? Esto puede tomar un momento.')) {
            return;
        }

        try {
            const response = await fetch('/Secretaria/GenerarSlots?medico_id=@medicoId', {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('[name="__RequestVerificationToken"]').value
                }
            });

            const result = await response.json();
            
            if (result.success) {
                alert('✓ ' + result.message);
                window.location.reload();
            } else {
                alert('✗ ' + result.message);
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Error al generar slots');
        }
    }
</script>
}

@functions {
    string ObtenerNombreDia(DayOfWeek dia)
    {
        return dia switch
        {
            DayOfWeek.Monday => "Lunes",
            DayOfWeek.Tuesday => "Martes",
            DayOfWeek.Wednesday => "Miércoles",
            DayOfWeek.Thursday => "Jueves",
            DayOfWeek.Friday => "Viernes",
            DayOfWeek.Saturday => "Sábado",
            DayOfWeek.Sunday => "Domingo",
            _ => ""
        };
    }
}