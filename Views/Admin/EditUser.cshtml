@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var personaId = ViewBag.PersonaId;
    var nombre = ViewBag.Nombre;
    var email = ViewBag.Email;
    var rolActual = ViewBag.RolActual;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-user-edit me-2"></i>
                        Editar Usuario
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="mb-4 p-3 bg-light rounded">
                        <h5 class="fw-semibold mb-2">Información del Usuario</h5>
                        <p class="mb-1"><strong>ID:</strong> @personaId</p>
                        <p class="mb-1"><strong>Nombre:</strong> @nombre</p>
                        <p class="mb-1"><strong>Email:</strong> @email</p>
                        <p class="mb-0">
                            <strong>Rol Actual:</strong> 
                            <span class="badge bg-primary ms-2">@rolActual</span>
                        </p>
                    </div>

                    <form asp-action="EditUser" asp-route-id="@personaId" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="nuevoRol" class="form-label fw-semibold">Nuevo Rol</label>
                            <select name="nuevoRol" id="nuevoRol" class="form-select" required>
                                <option value="">-- Seleccione el nuevo rol --</option>
                                @foreach (var role in ViewBag.Roles as List<string>)
                                {
                                    <option value="@role" selected="@(role == rolActual)">@role</option>
                                }
                            </select>
                        </div>

                        <div class="mb-4" id="roleKeyDiv" style="display: none;">
                            <label for="roleKey" class="form-label fw-semibold">
                                Clave de Rol
                                <small class="text-muted">(Requerida para Médico, Secretaria y Admin)</small>
                            </label>
                            <input type="password" name="roleKey" id="roleKey" class="form-control" placeholder="Ingrese la clave del nuevo rol" />
                            <small class="text-muted">Debe ingresar la clave del nuevo rol para confirmar el cambio.</small>
                        </div>

                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Advertencia:</strong> Cambiar el rol de un usuario puede afectar sus permisos y accesos en el sistema.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning text-white">
                                <i class="fas fa-save me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('nuevoRol').addEventListener('change', function() {
            const roleKeyDiv = document.getElementById('roleKeyDiv');
            const selectedRole = this.value;
            
            // Mostrar el campo de clave solo para Medico, Secretaria y Admin
            if (selectedRole === 'Medico' || selectedRole === 'Secretaria' || selectedRole === 'Admin') {
                roleKeyDiv.style.display = 'block';
            } else {
                roleKeyDiv.style.display = 'none';
            }
        });

        // Verificar al cargar la página
        document.addEventListener('DOMContentLoaded', function() {
            const roleSelect = document.getElementById('nuevoRol');
            const roleKeyDiv = document.getElementById('roleKeyDiv');
            const selectedRole = roleSelect.value;
            
            if (selectedRole === 'Medico' || selectedRole === 'Secretaria' || selectedRole === 'Admin') {
                roleKeyDiv.style.display = 'block';
            }
        });
    </script>
}
