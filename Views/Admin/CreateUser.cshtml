@model MedCenter.DTOs.RegisterDTO
@{
    ViewData["Title"] = "Crear Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>
                        Crear Nuevo Usuario
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CreateUser" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label fw-semibold">Nombre Completo</label>
                                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="usuario@ejemplo.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="form-label fw-semibold">Contraseña</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Mínimo 6 caracteres" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirmar Contraseña</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Repetir contraseña" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Role" class="form-label fw-semibold">Rol del Usuario</label>
                            <select asp-for="Role" class="form-select" id="roleSelect">
                                <option value="">-- Seleccione un rol --</option>
                                @foreach (var role in ViewBag.Roles as List<string>)
                                {
                                    <option value="@role">@role</option>
                                }
                            </select>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>

                        <div class="mb-4" id="roleKeyDiv" style="display: none;">
                            <label for="roleKey" class="form-label fw-semibold">
                                Clave de Rol
                                <small class="text-muted">(Requerida para Médico, Secretaria y Admin)</small>
                            </label>
                            <input type="password" name="roleKey" id="roleKey" class="form-control" placeholder="Ingrese la clave del rol" />
                            <small class="text-muted">Esta clave es necesaria para crear usuarios con roles administrativos.</small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Crear Usuario
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.getElementById('roleSelect').addEventListener('change', function() {
            const roleKeyDiv = document.getElementById('roleKeyDiv');
            const selectedRole = this.value;
            
            // Mostrar el campo de clave solo para Medico, Secretaria y Admin
            if (selectedRole === 'Medico' || selectedRole === 'Secretaria' || selectedRole === 'Admin') {
                roleKeyDiv.style.display = 'block';
            } else {
                roleKeyDiv.style.display = 'none';
            }
        });
    </script>
}
