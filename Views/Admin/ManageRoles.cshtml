@model IEnumerable<MedCenter.Models.RoleKey>
@{
    ViewData["Title"] = "Gestión de Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-semibold">
                    <i class="fas fa-key me-2 text-warning"></i>
                    Gestión de Claves de Roles
                </h2>
                <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Panel
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-semibold">
                        <i class="fas fa-lock me-2 text-primary"></i>
                        Claves de Acceso por Rol
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        Estas claves son necesarias para crear usuarios con roles administrativos (Médico, Secretaria, Admin).
                        Actualícelas periódicamente por seguridad.
                    </div>

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Rol</th>
                                        <th>Estado</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var roleKey in Model)
                                    {
                                        <tr>
                                            <td>@roleKey.Id</td>
                                            <td>
                                                @if (roleKey.Role == "Medico")
                                                {
                                                    <span class="badge bg-primary fs-6">
                                                        <i class="fas fa-user-md me-1"></i>@roleKey.Role
                                                    </span>
                                                }
                                                else if (roleKey.Role == "Secretaria")
                                                {
                                                    <span class="badge bg-info fs-6">
                                                        <i class="fas fa-user-tie me-1"></i>@roleKey.Role
                                                    </span>
                                                }
                                                else if (roleKey.Role == "Admin")
                                                {
                                                    <span class="badge bg-danger fs-6">
                                                        <i class="fas fa-user-shield me-1"></i>@roleKey.Role
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary fs-6">@roleKey.Role</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>Activa
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <button type="button" class="btn btn-sm btn-warning" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#updateKeyModal@(roleKey.Id)">
                                                    <i class="fas fa-edit me-1"></i>Actualizar Clave
                                                </button>
                                            </td>
                                        </tr>

                                        <!-- Modal para actualizar clave -->
                                        <div class="modal fade" id="updateKeyModal@(roleKey.Id)" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <form asp-action="UpdateRoleKey" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@roleKey.Id" />
                                                        
                                                        <div class="modal-header bg-warning text-white">
                                                            <h5 class="modal-title">
                                                                <i class="fas fa-key me-2"></i>
                                                                Actualizar Clave - @roleKey.Role
                                                            </h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="alert alert-warning" role="alert">
                                                                <i class="fas fa-exclamation-triangle me-2"></i>
                                                                Esta acción actualizará la clave requerida para crear usuarios con el rol <strong>@roleKey.Role</strong>.
                                                            </div>
                                                            
                                                            <div class="mb-3">
                                                                <label for="newKey@(roleKey.Id)" class="form-label fw-semibold">Nueva Clave</label>
                                                                <input type="text" 
                                                                       name="newKey" 
                                                                       id="newKey@(roleKey.Id)" 
                                                                       class="form-control" 
                                                                       placeholder="Ingrese la nueva clave" 
                                                                       required />
                                                                <small class="text-muted">Debe compartir esta clave con los administradores autorizados.</small>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                            <button type="submit" class="btn btn-warning text-white">
                                                                <i class="fas fa-save me-2"></i>Actualizar
                                                            </button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-key fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No hay claves de rol configuradas</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
